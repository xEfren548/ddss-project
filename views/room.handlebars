<head>
  <title>Tieso Inn</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.1/css/all.css"
    integrity="sha384-O8whS3fhG2OnA5Kas0Y9l3cfpmYjapjI0E4theH4iuMD+pLhbf6JI0jIMfYcK3yZ" crossorigin="anonymous" />

  {{!-- Flatpickr --}}
  <!-- JS for jQuery -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

  {{!-- Swal --}}
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/styles/home.css" />
</head>

<body>
  <!-- Nav Bar -->
  <nav class="navbar navbar-expand-sm navbar-dark bg-orange">
    <a class="navbar-brand" href="/"><i class="fa" aria-hidden="true"></i>
      Tieso Inn</a>
    <button class="navbar-toggler d-lg-none" type="button" data-toggle="collapse" data-target="#collapsibleNavId"
      aria-controls="collapsibleNavId" aria-expanded="false" aria-label="Toggle navigation">
      <i class="fa fa-caret-down" aria-hidden="true"></i>
    </button>
    <div class="collapse navbar-collapse" id="collapsibleNavId">
      <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
        <li class="nav-item">
          <a class="nav-link" href="/">Inicio</a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="#">Reservar<span class="sr-only">(current)</span></a>
        </li>
      </ul>
      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="dropdownId" data-toggle="dropdown" aria-haspopup="true"
            aria-expanded="false">Ingreso</a>
          <div class="dropdown-menu" aria-labelledby="dropdownId" id="dropdownMenu">
            <a class="dropdown-item" id="option-1" href="/login">
              Ingresar
            </a>
            <a class="dropdown-item" id="option-2" href="/register">
              Registro
            </a>
          </div>
        </li>
      </ul>
    </div>
  </nav>

  <div class="container">
    <div class="row mt-3">
      <div class="col-12">
        {{#if this.name}}
        <h1>Reserva en {{this.name}}</h1>
        {{else}}
        <h1>Reserva</h1>
        {{/if}}
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <h5>Datos de usuario</h5>

      </div>
      <div class="col-12 ml-3">
        <div class="mb-3">
          <label for="" class="form-label">Nombre</label>
          <input type="text" class="form-control" name="" id="client-name" aria-describedby="helpId" placeholder="" />
        </div>
      </div>

      <div class="col-5 ml-3">
        <div class="mb-3">
          <label for="" class="form-label">Email</label>
          <input type="email" class="form-control" name="" id="client-email" aria-describedby="emailHelpId"
            placeholder="abc@mail.com" />
        </div>
      </div>

      <div class="col-6 ml-3">
        <label for="" class="form-label">Telefono</label>
        <input type="tel" class="form-control" name="" id="client-cellphone" aria-describedby="emailHelpId"
          placeholder="333456789" />
      </div>

    </div>

    <div class="row mt-3">
      <div class="col-12">
        <h5>Datos de la reserva</h5>
      </div>
      <div class="col-8">
        <div class="mb-0 ml-3">
          <label for="" class="form-label">Selecciona las fechas deseadas</label>
          <input class="form-control form-control-solid" placeholder="Selecciona" id="date_range" />
          <input type="hidden" id="event_start_date">
          <input type="hidden" id="event_end_date">
        </div>
      </div>
      <div class="col-4">
        <div class="mb-3">
          <label for="" class="form-label">Noches</label>
          <input type="number" disabled class="form-control" name="" id="nNights" aria-describedby="helpId"
            placeholder="" />
        </div>
      </div>
      <div class="col-4 ml-3">
        <div class="mb-3">
          <label for="" class="form-label">Huéspedes</label>
          <input type="number" class="form-control" name="" id="nHuespedes" aria-describedby="helpId"
            placeholder="" min="1" max="99"/>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <h5>Detalles de los precios</h5>
      </div>
    </div>

    <div class="row">
      <div class="col-6 ml-3">
          <label for="" class="form-label">Precio por noche</label>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">$</span>
          </div>
          <input type="text" disabled class="form-control" name="" id="price_per_night" aria-describedby="helpId"
            placeholder="" value="{{this.price_per_night}}" />

        </div>
        <div class="mb-3">
        </div>
      </div>
      <div class="col-5">
          <label for="" class="form-label">Precio total</label>
        <div class="input-group">
          <div class="input-type-prepend">
            <span class="input-group-text">$</span>
          </div>
          <input type="text" disabled class="form-control" name="" id="total_price" aria-describedby="helpId"
            placeholder="" />
        </div>
      </div>
    </div>

    <div class="col-12">
      <button
        type="button"
        name=""
        id="btn-reservar"
        class="btn btn-primary d-block"
      >
        Reservar
      </button>
    </div>
    


  </div>

  <script src="/scripts/token.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", async function () {
      const userId = localStorage.getItem("user_id");
      const token = localStorage.getItem("token");
      console.log(userId);

      async function getUser() {
        try {
          const response = await fetch(`/users/${userId}`, {
            method: "GET",
            headers: {
              Authorization: `Token ${token}`,
            },
          });
          if (response.ok) {
            const user = await response.json();
            console.log(user);
            return user;
          }
        } catch (error) {
          console.error(error);
          return;
        }
      }
      const user = await getUser();
      console.log(user)

      document.getElementById("client-name").value = user.name;
      document.getElementById("client-email").value = user.email;
      document.getElementById("client-cellphone").value = user.cellphone;

      const dateRangeInput = document.getElementById("date_range");
      const nightsInput = document.getElementById("nNights");

      dateRangeInput.addEventListener("change", function () {
        const arrivalDate = document.getElementById("event_start_date");
        const departureDate = document.getElementById("event_end_date");
        calculateNightDifference(arrivalDate, departureDate);

        const totalPriceInput = document.getElementById("total_price");
        const pricePerNightValue = {{this.price_per_night}};

        const totalPrice = pricePerNightValue * nightsInput.value;
        totalPriceInput.value = totalPrice;

      })

      const btnReservar = document.getElementById("btn-reservar");
      btnReservar.addEventListener("click", async function (event) {
        event.preventDefault();

        const arrivalDate = document.getElementById("event_start_date");
        const departureDate = document.getElementById("event_end_date");
        const nHuespedes = document.getElementById("nHuespedes");

        try {
            Swal.fire({
            title: 'Creando reserva...',
            allowOutsideClick: false,
            didOpen: () => {
                Swal.showLoading();
            }
        });
          const response = await fetch(`/reservations?userId=${userId}`, {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
              Authorization: `Token ${token}`,
            },
            // user_id, room_id, arrival_date, checkout_date, num_of_guest, status
            body: JSON.stringify({
              user_id: userId,
              room_id: '{{this.room_id}}',
              arrival_date: arrivalDate.value,
              checkout_date: departureDate.value,
              num_of_guest: nHuespedes.value,
              total: document.getElementById("total_price").value,
              nNights: nightsInput.value
            }),
          });

          Swal.close();

          if (!response.ok) {
            throw new Error("Error al crear la reserva");
          }

          const data = await response.json();
          const reservation_num = data.reservation_num;
          window.location.href = `/reservations/confirmation/${reservation_num}`
        } catch(error) {
          console.error(error)
          Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: 'Error al crear la reserva: ' + error,
          })

        }

      })









      function calculateNightDifference(arrivalDate, departureDate) {
        console.log('Desde calcular noches')
        const arrivalValue = new Date(arrivalDate.value);
        const departureValue = new Date(departureDate.value);

        // Verifica si las fechas son válidas
        if (!isNaN(arrivalValue) && !isNaN(departureValue) && departureValue >= arrivalValue) {
          const timeDifference = departureValue.getTime() - arrivalValue.getTime();
          const nightDifference = Math.ceil(timeDifference / (1000 * 3600 * 24)); // Calcula la diferencia en días

          nightsInput.value = nightDifference
        } else {
          nightsInput.value = 0
        }
      }

      flatpickr("#date_range", {
        mode: "range",
        dateFormat: "d-m-Y",
        minDate: "today",
        onChange: function (selectedDates, dateStr, instance) {
          if (selectedDates.length === 2) {
            // Guardar las fechas en los campos ocultos
            document.getElementById('event_start_date').value = selectedDates[0].toISOString().split('T')[0];
            document.getElementById('event_end_date').value = selectedDates[1].toISOString().split('T')[0];

            console.log("Initial date: ", $('#event_start_date').val());
            console.log("Final date: ", $('#event_end_date').val());
          }
        },

      });
    })








  </script>
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>