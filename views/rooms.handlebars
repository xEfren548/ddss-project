<head>
  <title>Tieso Inn</title>
  <meta charset="utf-8" />
  <meta
    name="viewport"
    content="width=device-width, initial-scale=1, shrink-to-fit=no"
  />

  <!-- Bootstrap CSS -->
  <link
    rel="stylesheet"
    href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
    crossorigin="anonymous"
  />
  <link
    rel="stylesheet"
    href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
  />
  <link
    rel="stylesheet"
    href="https://use.fontawesome.com/releases/v5.1.1/css/all.css"
    integrity="sha384-O8whS3fhG2OnA5Kas0Y9l3cfpmYjapjI0E4theH4iuMD+pLhbf6JI0jIMfYcK3yZ"
    crossorigin="anonymous"
  />

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/styles/home.css" />
</head>

<body>
  <!-- Nav Bar -->
  <nav class="navbar navbar-expand-sm navbar-dark bg-orange">
    <a class="navbar-brand" href="/"><i class="fa" aria-hidden="true"></i>
      Tieso Inn</a>
    <button
      class="navbar-toggler d-lg-none"
      type="button"
      data-toggle="collapse"
      data-target="#collapsibleNavId"
      aria-controls="collapsibleNavId"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <i class="fa fa-caret-down" aria-hidden="true"></i>
    </button>
    <div class="collapse navbar-collapse" id="collapsibleNavId">
      <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
        <li class="nav-item">
          <a class="nav-link" href="/">Inicio</a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="#">Reservar<span
              class="sr-only"
            >(current)</span></a>
        </li>
      </ul>
      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle"
            href="#"
            id="dropdownId"
            data-toggle="dropdown"
            aria-haspopup="true"
            aria-expanded="false"
          >Ingreso</a>
          <div
            class="dropdown-menu"
            aria-labelledby="dropdownId"
            id="dropdownMenu"
          >
            <a class="dropdown-item" id="option-1" href="/login">
              Ingresar
            </a>
            <a class="dropdown-item" id="option-2" href="/register">
              Registro
            </a>
          </div>
        </li>
      </ul>
    </div>
  </nav>

  <div class="row my-5" id="container">
    {{#each rooms}}
      <div class="col-md-4 mb-4">
        <div class="card">
          <img src="{{this.image_url}}" class="card-img-top" alt="{{this.image_url}}" />
          <div class="card-body">
            <h5 class="card-title">{{this.roomNumber}}</h5>
            <p class="card-text">Categoria: {{this.category_id.name}}</p>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text">Costo por noche ${{this.price_per_night}}</p>
            <a
              href="/rooms/{{room_id}}"
              class="btn btn-success"
            >Reservar</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

  <script src="/scripts/token.js"></script>

  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script
    src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
  ></script>
  <script
    src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
  ></script>
</body>