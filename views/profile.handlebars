<head>
  <title>Tieso Inn - Perfil</title>
  <meta charset="utf-8" />
  <meta
    name="viewport"
    content="width=device-width, initial-scale=1, shrink-to-fit=no"
  />

  <!-- Bootstrap CSS -->
  <link
    rel="stylesheet"
    href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
    crossorigin="anonymous"
  />
  <link
    rel="stylesheet"
    href="https://use.fontawesome.com/releases/v5.1.1/css/all.css"
    integrity="sha384-O8whS3fhG2OnA5Kas0Y9l3cfpmYjapjI0E4theH4iuMD+pLhbf6JI0jIMfYcK3yZ"
    crossorigin="anonymous"
  />

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/styles/home.css" />
  <link rel="stylesheet" href="/styles/profile.css" />
</head>

<body>
  <!-- Nav Bar -->
  <nav class="navbar navbar-expand-sm navbar-dark bg-orange">
    <a class="navbar-brand" href="/"><i class="fa" aria-hidden="true"></i>
      Tieso Inn</a>
    <button
      class="navbar-toggler d-lg-none"
      type="button"
      data-toggle="collapse"
      data-target="#collapsibleNavId"
      aria-controls="collapsibleNavId"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <i class="fa fa-caret-down" aria-hidden="true"></i>
    </button>
    <div class="collapse navbar-collapse" id="collapsibleNavId">
      <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
        <li class="nav-item">
          <a class="nav-link" href="/">Inicio</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/rooms">Reservar</a>
        </li>
      </ul>
      <ul class="navbar-nav">
        <li class="nav-item dropdown active">
          <a
            class="nav-link dropdown-toggle"
            href="#"
            id="dropdownId"
            data-toggle="dropdown"
            aria-haspopup="true"
            aria-expanded="false"
          >Ingreso</a>
          <div
            class="dropdown-menu"
            aria-labelledby="dropdownId"
            id="dropdownMenu"
          >
            <a class="dropdown-item" id="option-1" href="/login">
              Ingresar
            </a>
            <a class="dropdown-item" id="option-2" href="/register">
              Registro
            </a>
          </div>
        </li>
      </ul>
    </div>
  </nav>

  <!-- User Profile -->
  <div class="container mt-4">
    <h1>Perfil de Usuario</h1>
    <!-- Role-Specific Tabs -->
    <ul class="nav nav-tabs mt-4" id="roleTabs">
      <li class="nav-item">
        <a
          class="nav-link active"
          id="tab-general"
          data-toggle="tab"
          href="#general"
        >General</a>
      </li>
      {{#if (eq this.role "Cliente")}}
        <li class="nav-item">
          <a
            class="nav-link"
            id="tab-bookings"
            data-toggle="tab"
            href="#bookings"
          >Mis Reservas</a>
        </li>
      {{/if}}
      {{#if (or (eq this.role "Recepcionista") (eq this.role "Gerente"))}}
        <li class="nav-item">
          <a
            class="nav-link"
            id="tab-management"
            data-toggle="tab"
            href="#management"
          >Gestión</a>
        </li>
      {{/if}}
      {{#if (eq this.role "Admin")}}
        <li class="nav-item">
          <a
            class="nav-link"
            id="tab-settings"
            data-toggle="tab"
            href="#admin-settings"
          >Configuraciones</a>
        </li>
      {{/if}}
      {{#if showTab}}
        <li class="nav-item">
          <a
            class="nav-link"
            id="tab-chats"
            data-toggle="tab"
            href="#chats"
          >Chats</a>
        </li>
      {{/if}}
      {{#if (eq this.role "Gerente")}}
        <li class="nav-item">
          <a
            class="nav-link"
            id="sub-tab-rooms"
            data-toggle="tab"
            href="#room-management"
          >Configuración de Habitaciones</a>
        </li>
      {{/if}}
    </ul>

    <!-- Tab Content -->
    <div class="tab-content mt-3">
      <div class="tab-pane fade show active" id="general">
        <p>Bienvenido al sistema Tieso Inn.</p>
        <p><strong>Nombre:</strong> {{this.name}}</p>
        <p><strong>Email:</strong> {{this.email}}</p>
        <p><strong>Telefono:</strong> {{this.cellphone}}</p>
      </div>
      {{#if (eq this.role "Cliente")}}
        <div class="tab-pane fade" id="bookings">
          <p>Aquí encontrarás tus reservas actuales.</p>
        </div>
      {{/if}}
      {{#if (or (eq this.role "Recepcionista") (eq this.role "Gerente"))}}
        <div class="tab-pane fade" id="management">
          <p>Sección de gestión de clientes y reservas.</p>
        </div>
      {{/if}}
      {{#if (eq this.role "Gerente")}}
        <div class="tab-pane fade" id="room-management">

        </div>
      {{/if}}
      {{#if (eq this.role "Admin")}}
        <div class="tab-pane fade" id="admin-settings">
          <h4>Configuracion de Sistema</h4>

          <!-- Sub-tabs -->
          <ul class="nav nav-tabs mt-3" id="adminSettingsSubTabs">
            <li class="nav-item">
              <a
                class="nav-link active"
                id="sub-tab-create-user"
                data-toggle="tab"
                href="#create-user"
              >Crear Usuarios</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link"
                id="sub-tab-user-management"
                data-toggle="tab"
                href="#user-management"
              >Gestión de Usuarios</a>
            </li>
          </ul>

          <!-- Sub-tab Content -->
          <div class="tab-content mt-3">
            <!-- General Settings -->
            <div class="tab-pane fade show active" id="create-user">
              <form id="createUserForm">
                <h3>Crear Usuario</h3>

                <div class="mb-3">
                  <label for="nameInput" class="form-label">Nombre</label>
                  <input
                    type="text"
                    id="nameInput"
                    class="form-control"
                    placeholder="Nombre del usuario"
                    required
                  />
                </div>

                <div class="mb-3">
                  <label for="roleInput" class="form-label">Rol</label>
                  <select id="roleInput" class="form-control">
                    <option value="Cliente">Cliente</option>
                    <option value="Recepcionista">Recepcionista</option>
                    <option value="Gerente">Gerente</option>
                    <option value="Admin">Admin</option>
                  </select>
                </div>

                <div class="mb-3">
                  <label for="emailInput" class="form-label">Correo Electrónico</label>
                  <input
                    type="email"
                    id="emailInput"
                    class="form-control"
                    placeholder="ejemplo@correo.com"
                    required
                  />
                </div>

                <div class="mb-3">
                  <label
                    for="passwordInput"
                    class="form-label"
                  >Contraseña</label>
                  <input
                    type="password"
                    id="passwordInput"
                    class="form-control"
                    placeholder="Contraseña"
                    required
                  />
                </div>

                <div class="mb-3">
                  <label
                    for="cellphoneInput"
                    class="form-label"
                  >Teléfono</label>
                  <input
                    type="text"
                    id="cellphoneInput"
                    class="form-control"
                    placeholder="Teléfono"
                  />
                </div>

                <div class="mb-3">
                  <label for="statusInput" class="form-label">Estado</label>
                  <select id="statusInput" class="form-control">
                    <option value="Activo">Activo</option>
                    <option value="Eliminado">Eliminado</option>
                    <option value="Bloqueado">Bloqueado</option>
                  </select>
                </div>

                <button
                  type="button"
                  class="btn btn-success"
                  onclick="crearUsuario()"
                >Crear Usuario</button>
              </form>

            </div>

            <!-- User Management -->
            <div class="tab-pane fade" id="user-management">
            </div>
          </div>
        </div>
      {{/if}}

      {{#if showTab}}
        <div class="tab-pane fade" id="chats">
          <p>Chats de usuarios</p>
        </div>
      {{/if}}
    </div>
  </div>

  <script src="/scripts/token.js"></script>
  <script src="/scripts/profile.js"></script>
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script
    src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
  ></script>
  <script
    src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
  ></script>
</body>