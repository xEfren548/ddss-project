    <div class="register-container">
        <h1>Registro</h1>
        <form id="register-form" action="/register" method="POST">
            <label for="name">Nombre completo <span class="requerido">*</span></label>
            <input type="text" id="name" name="name" placeholder="Escribe Tu nombre" required>

            <label for="email">Correo electrónico <span class="requerido">*</span></label>
            <input type="email" id="email" name="email" placeholder="Escribe Tu Correo electronico" required>

            <label for="password">Contraseña <span class="requerido">*</span></label>
            <div class="password-container">
                <input type="password" id="password" name="password" placeholder="Escribe tu contraseña" required>
                <span id="togglePassword" class="toggle-password"><i class="fa-solid fa-eye-slash"></i></span>
            </div>

            <label for="confirmPassword">Confirmar Contraseña <span class="requerido">*</span></label>
            <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirme su contraseña"
                required>

            <div id="password-requirements" class="requirements">
                <p id="length-requirement">- Al menos 8 caracteres</p>
                <p id="uppercase-requirement">- Al menos 1 letra mayúscula</p>
                <p id="special-requirement">- Al menos 1 caracter especial</p>
            </div>

            <label for="cellphone">Número de teléfono <span class="requerido">*</span></label>
            <input type="tel" id="cellphone" name="cellphone" placeholder="Escribe Tu telefono" required>

            <button type="submit">Crear cuenta</button>
            <div id="loading-spinner" class="spinner hidden"></div>
        </form>
        <p>¿Ya tienes una cuenta? <a href="/login">Inicia sesión aquí</a></p>
    </div>
    <script src="/scripts/register.js"></script>
    <!--Iconos-->
    <script src="https://kit.fontawesome.com/79b3d7b09d.js" crossorigin="anonymous"></script>
</body>
